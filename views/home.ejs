<!doctype html>
<html>
<head>
<% include partials/head %>
<link rel="stylesheet" href="stylesheets/home-styles.css">
<script src="scripts/home-scripts.js"></script>
</head>
<body>

<main>
<% include partials/banner %>
<% include partials/navbar %>
<div class="bottom">
  <h2>My Alarms</h2>
    <p class="statement">Your next alarm is in <span id="countdown">00:12</span> at <span id="next-alarm">8:15 AM</span>.</p>
  <h2>Friends' Alarms</h2>
    <p class="statement">No one to wake up at this time! See all alarms <a>here</a>.</p>

  <div class="friend-alarms-wrapper">
  <div class="friend-alarm">
    <h3>WAKE UP MISHA Y!</h3>
    <p class="alarm-time">Alarm: 8:00 AM</p>
    <div class="row">
      <div class="input-field col s8">
        <input placeholder="search for song or artist..." class="search" type="text">
      </div>
      <a class="light button col" class="send-song">send song</a>
    </div>
    <div class="row">
      <p class="col s8 number">(917) 460â€“6499</p>
      <a class="light button col" href="tel:9174606499">call</a>
    </div>
    <a class="dismiss">My friend is awake! Dismiss this box.</a>
  </div>
  </div>

  <h2>My Profile</h2>
    <a href="<%=user.external_urls.spotify%>" target="_blank"><img src="<%=user.images[0].url%>"></a>
    <table class="profile">
      <tr>
        <td class="col1">Username</td>
        <td class="username"><%=user.username%></td>
      </tr>
      <tr>
        <td class="col1">First Name</td>
        <td><%=user.firstname%></td>
      </tr>      
      <tr>
        <td class="col1">First Name</td>
        <td><%=user.lastname%></td>
      </tr>
      <tr>
        <td class="col1">Phone Number</td>
        <td><%=user.phonenum%></td>
      </tr>
      <tr>
        <td class="col1">Email</td>
        <td><%=user.email%></td>
      </tr>
    </table>

  <h2>Spotify Tokens</h2>
  <div class="tokens">
    <p class="col1">Access Token</p>
    <p class="access token"><%=user.access_token%></p>
    <p class="col1">Refresh Token</p>
    <p class="refresh token"><%=user.refresh_token%></p>
    <a class="medium button">refresh token</a>
  </div>
</div>
</main>

</body>
</html>