<!doctype html>
<html>
<head>
<% include partials/head %>
<link rel="stylesheet" href="stylesheets/alarms-styles.css">
</head>
<body>

<main>
<% include partials/banner %>
<% include partials/navbar %>
<div class="bottom">
  <h2>My Alarms</h2>
    <% if (user.alarms && user.alarms.length > 0) { %>
    <table class="my-alarms">
      <tr>
        <th>Time</th>
        <th>Friend</th>
      </tr>

    <% user.alarms.forEach(function(a){ %>
      <tr>
        <% var hours   = a.time.split(":")[0]; %>
        <% var time = ((+hours + 11) % 12 + 1)+a.time.substring(2,); %>
        <% var suffix = (hours >= 12)? 'PM' : 'AM'; %>
        <td><%= time+" "+suffix %></td>
        <td><%= a.friend.name %></td>
      </tr> 
    <% }); %>
    </table>
    <%}%>
    <div class="button-wrapper">
      <a href="/new-alarm" class="medium button">new alarm</a>  
    </div>

  <h2>Friends' Alarms</h2>
    <table class="friends-alarms">
      <tr>
        <th>Friend</th>
        <th>Time</th>
      </tr>
      <tr>
        <td>Misha Y</td>
        <td>8:00 AM</td>
      </tr>
      <tr>
        <td>Mimi N</td>
        <td>8:15 AM</td>
      </tr>
    </table>
</div>
</main>

</body>
</html>